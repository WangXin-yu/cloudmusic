.user-box{
  padding: 0 30rpx;
  font-size:28rpx;
}
.songlist-item-cover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;

}
.left{
  display: flex;
  align-items: center;
}
.singer-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
    font-size:28rpx;
    margin: 20rpx 0;
}
.songlist-item {
  display: flex;
  margin: 20rpx 0;
}

.songlist-item-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}

.songlist-item-other-info {
  display: flex;
  font-size: 26rpx;
  color: #808080;
}

.songlist-item-right-songlist-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 480rpx;
  margin-bottom: 20rpx;
}
.gender-icon{
  width: 40rpx;
  height: 40rpx;
}
.follow-btn{
  color: #ff3a3a;
  font-size: 24rpx;
  border:1rpx solid #ff3a3a;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 6rpx 20rpx;
}
.singer-cover-singer-part{
  width: 100rpx;
  height:100rpx;
  border-radius: 50%;
  margin-right:20rpx;
}
.username{
  display: flex;
}
.add-to-follow{
  width:30rpx;
  height:30rpx;
  margin-right:4rpx;
}
.signature{
  font-size:22rpx;
  white-space: nowrap;
  overflow: hidden;
  width:400rpx;
  text-overflow: ellipsis;
  color:#808080;
}