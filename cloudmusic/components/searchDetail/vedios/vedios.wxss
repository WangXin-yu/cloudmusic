.vedio-box{
    padding: 30rpx;
    padding-top: 0;
  color: #333;
  font-family: "Microsoft YaHei";
  font-size:28rpx;
}
.vedio-item {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}

.vedio-item-cover {
  width: 280rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.vedio-item-right-other-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 480rpx;
}

.vedio-item-right-other-info-title {
  font-size:28rpx;
  display: flex;
  align-items: center;
}

.vedio-item-right-other-info-mv {
  height: 28rpx;
  width: 40rpx;
  border: 1rpx solid #ff3030;
  padding: 0 4rpx;
  font-size: 18rpx;
  text-align: center;
  line-height: 30rpx;
  color: #ff3030;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.vedio-item-right-other-info-playTime-username {
  display: flex;
  font-size: 24rpx;
  color: #808080;
  margin-top: 20rpx;
}