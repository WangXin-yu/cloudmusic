.diy-top-title-box{
  width: 100%;
  position: fixed;
  margin-top: 30rpx;
  margin-left: 20rpx; 
  top:20rpx;
  z-index: 22;
}
.diy-top-title{
  display: flex;
  align-items: center;
}
.editor-recommendation{
  font-size:22rpx;
  color: #fff;
}
.go-back{
  width: 10vw;
  margin-left:20rpx;
}
.title{
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  font-size:34rpx;
  width: 500rpx;
}
.recommand-title{
  font-size:22rpx;
  color:#ccc;
  text-align: left;
}
.go-back-icon{
  width:60rpx;
  height:60rpx;
}
.Gauss-bg{
  background-size: 100%;
  z-index: -1000;
  width: 100%;
  height:45vh;
  position:absolute;
  top : 0;
  box-sizing: border-box;
}
.name-and-likecount-box{
  position: absolute;
  bottom:60rpx;
  left: 30rpx;
   width: 90%;
   box-sizing: border-box;
}
.radio-name{
  font-size:36rpx;
  color: #fff;
  font-weight: bold;
}
.liked-count{
  font-size: 26rpx;
  color: #eee;
  margin-top: 20rpx;
}
.name-and-likecount-collect{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.collect{
  padding: 14rpx 40rpx;
  background: #ff3030;
  border-radius: 40rpx;
  margin-top: 40rpx;
  color: #fff;
  font-size:28rpx;
  display: flex;
  align-items: center;
}
.star{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.radio-tabBar-box{
  background: #fff;
  position: absolute;
  bottom: 0;
  top: 42vh;
  width: 100%;
  box-sizing: border-box;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}
.radio-tabBar{
  display: flex;
  justify-content: space-around;
  line-height: 80rpx;
  font-size:28rpx;
  border-bottom: 1rpx solid #eee;
}
.selected{
  color: #ff3030;
  font-weight: bold;
  border-bottom: 4rpx solid #ff3030;
}
.content-box{
  padding: 30rpx;
}
.dj-cover-and-name-box{
  margin-bottom: 40rpx;  
}
.cover-and-name-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cover-and-name{
  display: flex;
}
.dj-text{
  font-size:30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}
.dj-cover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.dj-nickname-and-dj-desc{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.dj-nickname{
  font-size:30rpx;
}
.dj-desc{
  font-size:24rpx;
  color: #808080;
}
/* 内容简介部分的css */
.category-box{
  display: flex;
  align-items: center;
}
.dj-desc-box{
  font-size:28rpx;
  color: #808080;
  line-height: 50rpx;
  margin-bottom: 60rpx;
}
.category-bg{
  font-size:20rpx;
  line-height: 20rpx;
  height: 20rpx;
  text-align: center;
  padding: 4rpx;
  color: #ff9d9d;
  margin-left: 10rpx;
  border: 1rpx solid #ff9d9d;
  border-radius: 5rpx;
}
/* 评论部分 */
.comment-item{
  margin: 20rpx 0;
  display: flex;
}
.comment-content{
  width:90%;
  color: #333;
  font-size:30rpx;
  line-height:45rpx;
}
.commenter-avatar{
  width: 60rpx;
  height:60rpx;
  border-radius: 50%; 
  margin-right:20rpx;
}
.commenter-nickname{
  font-size:28rpx;
  color: #808080;
  margin-top:10rpx;
  margin-bottom: 30rpx;
}
.commenter-programName{
  font-size:24rpx;
  margin: 20rpx 0;
  color: #808080;
}
/* 节目部分 */
/* (1)顶部的选择框 */
.program-count{
  font-weight: bold;
  font-size:32rpx;
}
.top-option{
  display: flex;
  justify-content: space-between;
}
.sort-and-multiple-selection{
  display: flex;
  font-size:28rpx;
}
.down-arrow-icon, .multiple-selection-icon{
  width: 26rpx;
  height: 26rpx;
}
.sort-box, .multiple-selection-box{
  display: flex;
  align-items: center;
}
.sort-box{
  margin-right:20rpx;
}
/* （2）节目列表 */
.programs-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 0;
}
.programs-item-left{
  display: flex;
  align-items: center;
}
.program-name{
  font-size:30rpx;
}
.serialNum{
  color: #999;
  font-size:28rpx;
  margin-right: 40rpx;
}
.other-info{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  font-size:24rpx;
  color: #999;
}
.createTime{
  margin-right:30rpx;
}
.program-playcount{
  display: flex;
  align-items: center;
  margin-right:30rpx;
}
.program-timer{
  display: flex;
  align-items: center;
  margin-right:30rpx;
}
.play-count-icon{
  width: 30rpx;
  height:30rpx;
}
.timer-icon{
  width: 26rpx;
  height:26rpx;
}