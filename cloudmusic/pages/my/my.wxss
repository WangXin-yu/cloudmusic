.login-btn-box{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 28rpx;
}
.tips{
  text-align: center;
}
.login-btn{
  background: #9e444d;
  text-align: center;
  color: #fff;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  font-size:26rpx;
}

.user-info-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  font-size: 26rpx;
}
.left{
  display: flex;
  align-items: center;
}
.user-cover{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.username-and-level-box{
  margin-left: 40rpx;
}
.user-level{
  margin-left: 20rpx;
  border: 1px solid #eee;
  width:90rpx;
  height:26rpx;
  line-height:26rpx;
  font-size:24rpx;
  text-align: center;
  background: #eee;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.sign-in{
  background: #ccc;
  height:26rpx;
  line-height:26rpx;
  color:#fff;
  font-size:24rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}
.event-follows-followeds-edit{
  display: flex;
  justify-content: space-between;
  padding: 50rpx;
}
.count{
  color:#3a3a3a;
  font-size:26rpx;
}
.event, .follows, .followeds, .edit{
  text-align: center;
  font-size:24rpx;
  color: #999;
}
.edit-icon{
  width:40rpx;
  height:40rpx;
  
}
.edit{
  vertical-align: 30rpx;
}
.equit{
  font-size:26rpx;
  margin: 0 auto;
  text-align: center;
  padding: 15rpx;
  border-radius: 6rpx;
  width: 120rpx;
  background: #9e444d;
  color: #fff;  
  
}