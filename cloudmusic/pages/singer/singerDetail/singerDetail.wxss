.singer-cover-box {
  position: relative;
}
.go-back-icon{
  width:60rpx;
  height:60rpx;
  position: absolute;
  top:60rpx;
  margin-left:40rpx;
}
.singer-cover {
  width: 100%;
  height: 488rpx;
}

.singer-name-and-fans {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  bottom: 10%;
  margin-left: 40rpx;
}
.singer-name{
  font-size: 38rpx;
  color:#fff;
  font-weight: bold;
}
.fans{
  color:#cfcfcf;
  font-size:24rpx;
  margin: 20rpx 0;
}
.follow-btn{
  position: absolute;
  bottom: 20%;
  right: 40rpx;
  color: #fff;
  font-size: 24rpx;
  background: #ff3a3a;
  width: 130rpx;
  height:60rpx;
  text-align: center;
  line-height:60rpx;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-to-follow{
  width:24rpx;
  height:24rpx;
  margin-right:10rpx;
}
.song-list{
  position:absolute;
  bottom: 0;
  top: 35vh;
  background: #fff;
  width: 100%;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}
.tab-bar{
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
  color: #333;
  font-size:28rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.selected{
  color:#ff3a3a;
  border-bottom: 4rpx solid #ff3a3a;
  font-weight: bold;
}
.add-and-manager{
  display: flex;
  justify-content: space-between;
  padding: 40rpx 40rpx;
}
.add{
  display: flex;
  align-items: center;
}
.add-to-collect{
  width:40rpx;
  height:40rpx;
  margin-right:20rpx;
}
.collect-hot{
  font-weight:bold; 
}
.manager{
  display: flex;
  align-items: center;

  font-size:28rpx;
}
.manager-icon{
  width:30rpx;
  height:30rpx;
  margin-right:10rpx;
}