.nickname-box,.sex-box, .birthday-box, .autograph-box{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  align-items: center;
  position:relative;
}
.nickname-input{
  width: 250rpx;
  margin-right: 10rpx;
  color: #999 !important;
  font-size:28rpx;
}
.nickname-box .arrow-right{
  position: absolute;
  right: 20rpx;
}
.right{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sex-popup-box{
  text-align: center;
  padding-top: 30rpx;
}
.sex-item{
  line-height: 60rpx;
  font-size: 26rpx;
}
.sex-text, .birthday-text{
  font-size:28rpx;
}
.hover-style{
  background: #eee;
}
.arrow-right{
  width: 40rpx;
  height:40rpx;
}
.autograph-box{
  display: block;
}
.autograph-text{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}
.autograph-textarea{
  width: 100%;
  height:100rpx;
  box-sizing: border-box;
  margin: 20rpx auto;
}
.modify{
  width: 150rpx;
  padding: 10rpx 10rpx;
  margin: 0 auto;
  background: #9e444d;
  color:#fff;
  border-radius: 6rpx;
  font-size: 28rpx;
  text-align: center;
}